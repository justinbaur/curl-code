{
  "name": "curl-code",
  "displayName": "curl-code",
  "description": "HTTP client using cURL backend for VS Code",
  "version": "0.1.0",
  "publisher": "Justin Baur",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/justinbaur/curl-code"
  },
  "engines": {
    "vscode": "^1.108.0",
    "node": ">=24.0.0",
    "npm": ">=11.0.0"
  },
  "categories": [
    "Other",
    "Testing"
  ],
  "keywords": [
    "http",
    "rest",
    "api",
    "curl",
    "client",
    "request"
  ],
  "main": "./dist/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p ./tsconfig.test.json",
    "watch-tests": "tsc -p ./tsconfig.test.json -w",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test:unit": "mocha 'out/test/suite/unit/**/*.test.js' --require source-map-support/register",
    "test:extension": "node ./out/test/runTest.js",
    "test:integration": "node ./out/test/runTest.js --grep 'integration'",
    "test:e2e": "node ./out/test/runTest.js --grep 'e2e'",
    "test:webview": "cd webview-ui && npm run test",
    "test:webview:watch": "cd webview-ui && npm run test:watch",
    "test:webview:ui": "cd webview-ui && npm run test:ui",
    "test": "npm run test:unit && npm run test:extension",
    "test:all": "npm run test:unit && npm run test:extension && npm run test:webview",
    "test:coverage:unit": "c8 --reporter=text --reporter=lcov --reporter=html-spa --report-dir=coverage/unit mocha 'out/test/suite/unit/**/*.test.js'",
    "test:coverage:extension": "c8 --reporter=text --reporter=lcov --reporter=html-spa --report-dir=coverage/extension node ./out/test/runTest.js",
    "test:coverage": "npm run test:coverage:unit && npm run test:coverage:extension",
    "test:coverage:all": "npm run test:coverage && cd webview-ui && npm run test:coverage",
    "build:webview": "cd webview-ui && npm run build",
    "build:all": "npm run build:webview && npm run compile",
    "deploy": "vsce publish --yarn"
  },
  "devDependencies": {
    "@types/chai": "^5.2.3",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.10.5",
    "@types/sinon": "^21.0.0",
    "@types/source-map-support": "^0.5.10",
    "@types/vscode": "^1.108.0",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "@vscode/test-electron": "^2.4.1",
    "c8": "^10.1.3",
    "chai": "^6.2.2",
    "eslint": "^9.39.2",
    "mocha": "^11.7.5",
    "sinon": "^21.0.1",
    "source-map-support": "^0.5.21",
    "ts-loader": "^9.5.1",
    "typescript": "^5.7.3",
    "webpack": "^5.104.1",
    "webpack-cli": "^5.1.4"
  },
  "activationEvents": [
    "onLanguage:http",
    "workspaceContains:**/*.http",
    "workspaceContains:**/*.rest",
    "workspaceContains:**/.curl-code/**"
  ],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "curl-code-explorer",
          "title": "curl-code",
          "icon": "media/icons/curl-code.png"
        }
      ]
    },
    "views": {
      "curl-code-explorer": [
        {
          "id": "curl-code.collections",
          "name": "Collections",
          "contextualTitle": "HTTP Collections"
        },
        {
          "id": "curl-code.history",
          "name": "History",
          "contextualTitle": "Request History"
        },
        {
          "id": "curl-code.environments",
          "name": "Environments",
          "contextualTitle": "Environments"
        }
      ]
    },
    "commands": [
      {
        "command": "curl-code.newRequest",
        "title": "New Request",
        "icon": "$(add)",
        "category": "curl-code"
      },
      {
        "command": "curl-code.sendRequest",
        "title": "Send Request",
        "icon": "$(play)",
        "category": "curl-code"
      },
      {
        "command": "curl-code.newCollection",
        "title": "New Collection",
        "icon": "$(new-folder)",
        "category": "curl-code"
      },
      {
        "command": "curl-code.importCollection",
        "title": "Import Collection",
        "icon": "$(cloud-download)",
        "category": "curl-code"
      },
      {
        "command": "curl-code.exportCollection",
        "title": "Export Collection",
        "icon": "$(cloud-upload)",
        "category": "curl-code"
      },
      {
        "command": "curl-code.deleteCollection",
        "title": "Delete Collection",
        "icon": "$(trash)",
        "category": "curl-code"
      },
      {
        "command": "curl-code.newEnvironmentVariable",
        "title": "New Environment Variable",
        "icon": "$(add)",
        "category": "curl-code"
      },
      {
        "command": "curl-code.editEnvironmentVariable",
        "title": "Edit Variable",
        "icon": "$(edit)",
        "category": "curl-code"
      },
      {
        "command": "curl-code.deleteEnvironmentVariable",
        "title": "Delete Variable",
        "icon": "$(trash)",
        "category": "curl-code"
      },
      {
        "command": "curl-code.refreshEnvironments",
        "title": "Refresh Environment",
        "icon": "$(play)",
        "category": "curl-code"
      },
      {
        "command": "curl-code.newEnvironment",
        "title": "New Environment",
        "icon": "$(new-folder)",
        "category": "curl-code"
      },
      {
        "command": "curl-code.setActiveEnvironment",
        "title": "Set as Active Environment",
        "icon": "$(check)",
        "category": "curl-code"
      },
      {
        "command": "curl-code.deactivateEnvironment",
        "title": "Deactivate Environment",
        "icon": "$(circle-slash)",
        "category": "curl-code"
      },
      {
        "command": "curl-code.deleteEnvironment",
        "title": "Delete Environment",
        "icon": "$(trash)",
        "category": "curl-code"
      },
      {
        "command": "curl-code.openRequestBuilder",
        "title": "Open Request Builder",
        "category": "curl-code"
      },
      {
        "command": "curl-code.runHttpFile",
        "title": "Run HTTP Request",
        "icon": "$(run)",
        "category": "curl-code"
      },
      {
        "command": "curl-code.copyAsCurl",
        "title": "Copy as cURL",
        "category": "curl-code"
      },
      {
        "command": "curl-code.clearHistory",
        "title": "Clear History",
        "icon": "$(clear-all)",
        "category": "curl-code"
      },
      {
        "command": "curl-code.refreshCollections",
        "title": "Refresh Collections",
        "icon": "$(refresh)",
        "category": "curl-code"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "curl-code.newRequest",
          "when": "view == curl-code.collections",
          "group": "navigation"
        },
        {
          "command": "curl-code.newCollection",
          "when": "view == curl-code.collections",
          "group": "navigation"
        },
        {
          "command": "curl-code.refreshCollections",
          "when": "view == curl-code.collections",
          "group": "navigation"
        },
        {
          "command": "curl-code.importCollection",
          "when": "view == curl-code.collections"
        },
        {
          "command": "curl-code.newEnvironmentVariable",
          "when": "view == curl-code.environments",
          "group": "navigation"
        },
        {
          "command": "curl-code.newEnvironment",
          "when": "view == curl-code.environments",
          "group": "navigation"
        },
        {
          "command": "curl-code.refreshEnvironments",
          "when": "view == curl-code.environments",
          "group": "navigation"
        },
        {
          "command": "curl-code.clearHistory",
          "when": "view == curl-code.history",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "curl-code.sendRequest",
          "when": "view == curl-code.collections && viewItem == request",
          "group": "inline"
        },
        {
          "command": "curl-code.exportCollection",
          "when": "view == curl-code.collections && viewItem == collection"
        },
        {
          "command": "curl-code.deleteCollection",
          "when": "view == curl-code.collections && viewItem == collection"
        },
        {
          "command": "curl-code.copyAsCurl",
          "when": "view == curl-code.collections && viewItem == request"
        },
        {
          "command": "curl-code.setActiveEnvironment",
          "when": "view == curl-code.environments && viewItem == environment",
          "group": "inline"
        },
        {
          "command": "curl-code.setActiveEnvironment",
          "when": "view == curl-code.environments && viewItem == environment"
        },
        {
          "command": "curl-code.setActiveEnvironment",
          "when": "view == curl-code.environments && viewItem == globalEnvironment",
          "group": "inline"
        },
        {
          "command": "curl-code.setActiveEnvironment",
          "when": "view == curl-code.environments && viewItem == globalEnvironment"
        },
        {
          "command": "curl-code.setActiveEnvironment",
          "when": "view == curl-code.environments && viewItem == collectionEnvironment",
          "group": "inline"
        },
        {
          "command": "curl-code.setActiveEnvironment",
          "when": "view == curl-code.environments && viewItem == collectionEnvironment"
        },
        {
          "command": "curl-code.deactivateEnvironment",
          "when": "view == curl-code.environments && viewItem == activeEnvironment",
          "group": "inline"
        },
        {
          "command": "curl-code.deactivateEnvironment",
          "when": "view == curl-code.environments && viewItem == activeEnvironment"
        },
        {
          "command": "curl-code.deactivateEnvironment",
          "when": "view == curl-code.environments && viewItem == globalActiveEnvironment",
          "group": "inline"
        },
        {
          "command": "curl-code.deactivateEnvironment",
          "when": "view == curl-code.environments && viewItem == globalActiveEnvironment"
        },
        {
          "command": "curl-code.deactivateEnvironment",
          "when": "view == curl-code.environments && viewItem == collectionActiveEnvironment",
          "group": "inline"
        },
        {
          "command": "curl-code.deactivateEnvironment",
          "when": "view == curl-code.environments && viewItem == collectionActiveEnvironment"
        },
        {
          "command": "curl-code.deleteEnvironment",
          "when": "view == curl-code.environments && viewItem == environment"
        },
        {
          "command": "curl-code.deleteEnvironment",
          "when": "view == curl-code.environments && viewItem == activeEnvironment"
        },
        {
          "command": "curl-code.deleteEnvironment",
          "when": "view == curl-code.environments && viewItem == globalEnvironment"
        },
        {
          "command": "curl-code.deleteEnvironment",
          "when": "view == curl-code.environments && viewItem == globalActiveEnvironment"
        },
        {
          "command": "curl-code.editEnvironmentVariable",
          "when": "view == curl-code.environments && viewItem == variable",
          "group": "inline"
        },
        {
          "command": "curl-code.editEnvironmentVariable",
          "when": "view == curl-code.environments && viewItem == variable"
        },
        {
          "command": "curl-code.deleteEnvironmentVariable",
          "when": "view == curl-code.environments && viewItem == variable"
        }
      ],
      "editor/title": [
        {
          "command": "curl-code.runHttpFile",
          "when": "resourceLangId == http",
          "group": "navigation"
        }
      ]
    },
    "languages": [
      {
        "id": "http",
        "aliases": [
          "HTTP",
          "http"
        ],
        "extensions": [
          ".http",
          ".rest"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "configuration": {
      "title": "curl-code",
      "properties": {
        "curl-code.curlPath": {
          "type": "string",
          "default": "curl",
          "description": "Path to cURL executable"
        },
        "curl-code.timeout": {
          "type": "number",
          "default": 30000,
          "description": "Request timeout in milliseconds"
        },
        "curl-code.followRedirects": {
          "type": "boolean",
          "default": true,
          "description": "Follow HTTP redirects"
        },
        "curl-code.verifySSL": {
          "type": "boolean",
          "default": true,
          "description": "Verify SSL certificates"
        },
        "curl-code.saveRequestHistory": {
          "type": "boolean",
          "default": true,
          "description": "Save request history"
        },
        "curl-code.maxHistoryItems": {
          "type": "number",
          "default": 50,
          "description": "Maximum number of history items"
        }
      }
    }
  }
}
